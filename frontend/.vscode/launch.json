{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Lancer Flutter Windows + Django",
      "configurations": ["Flutter Windows", "Django Backend"]
    },
    {
      "name": "Lancer Flutter Web Chrome + Django",
      "configurations": ["Flutter Web (Chrome)", "Django Backend"]
    },
    {
      "name": "Lancer Flutter Web Edge + Django",
      "configurations": ["Flutter Web (Edge)", "Django Backend"]
    },
    {
      "name": "Lancer Flutter Android + Django",
      "configurations": ["Flutter Android Emulator", "Django Backend"]
    }
  ],
  "configurations": [
    {
      "name": "Flutter Windows",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["-d", "windows"]
    },
    {
      "name": "Flutter Web (Chrome)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["-d", "chrome"]
    },
    {
      "name": "Flutter Web (Edge)",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["-d", "edge"]
    },
    {
      "name": "Flutter Android Emulator",
      "request": "launch",
      "type": "dart",
      "program": "lib/main.dart",
      "args": ["-d", "emulator-5554"]
    },
    {
      "name": "Django Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/../backend/manage.py",
      "args": ["runserver"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/../backend",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/../backend"
      },
      "justMyCode": true
    }
  ]
}
